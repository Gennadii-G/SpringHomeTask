<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <bean id="smallAuditorium" class="ru.epam.spring.hometask.domain.Auditorium">
        <property name="name">
            <value type="java.lang.String">${auditorium.small.name}</value>
        </property>
        <property name="numberOfSeats">
            <value type="java.lang.Long">${auditorium.small.seats}</value>
        </property>
        <property name="vipSeats">
            <value type="java.lang.String[]">${auditorium.small.vipSeats}</value>
        </property>
    </bean>
    <bean id="mediumAuditorium" class="ru.epam.spring.hometask.domain.Auditorium">
        <property name="name">
            <value type="java.lang.String">${auditorium.medium.name}</value>
        </property>
        <property name="numberOfSeats">
            <value type="java.lang.Long">${auditorium.medium.seats}</value>
        </property>
        <property name="vipSeats">
            <value type="java.lang.String[]">${auditorium.medium.vipSeats}</value>
        </property>
    </bean>
    <bean id="largeAuditorium" class="ru.epam.spring.hometask.domain.Auditorium">
        <property name="name">
            <value type="java.lang.String">${auditorium.large.name}</value>
        </property>
        <property name="numberOfSeats">
            <value type="java.lang.Long">${auditorium.large.seats}</value>
        </property>
        <property name="vipSeats">
            <value type="java.lang.String[]">${auditorium.large.vipSeats}</value>
        </property>
    </bean>
</beans>