<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <!--<bean class="ru.epam.spring.hometask.domain.MyClass" id="Testo"/>-->

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:aud.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
    </bean>

    <bean id="usersDAO" class="ru.epam.spring.hometask.database.UsersDAO"/>

    <bean id="userAdapter" class="ru.epam.spring.hometask.utils.console_handlers.UserAdapter">
        <constructor-arg ref="usersDAO"/>
    </bean>

    <!--<bean id="user" class="ru.epam.spring.hometask.domain.User" scope="prototype"/>-->

    <bean id="UsersDAO" class="ru.epam.spring.hometask.database.UsersDAO"/>

</beans>